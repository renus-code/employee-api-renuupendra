<h2>Update Employee</h2>

<form action="/employees/update" method="POST">
  <label>Employee ID:</label>
  <input type="text" name="id" required placeholder="MongoDB ObjectId">

  <label>Name:</label>
  <input type="text" name="name" minlength="2" maxlength="50">

  <label>Salary:</label>
  <input type="number" name="salary" min="0" step="0.01">

  <label>Age:</label>
  <input type="number" name="age" min="16" max="80">

  <label>Department:</label>
  <select name="department">
    <option value="">-- Keep Current --</option>
    <option value="IT">IT</option>
    <option value="HR">HR</option>
    <option value="Sales">Sales</option>
    <option value="Finance">Finance</option>
  </select>

  <label>Status:</label>
  <select name="isActive">
    <option value="">-- Keep Current --</option>
    <option value="true">Active</option>
    <option value="false">Inactive</option>
  </select>

  <button type="submit">Update Employee</button>
</form>

{{#if success}}<p class="msg success">{{success}}</p>{{/if}}
{{#if error}}<p class="msg error">{{error}}</p>{{/if}}

{{#if employee}}
  <div style="margin-top:30px; padding:20px; background:#f8f9fa; border-radius:8px;">
    <h3>Updated Employee Details</h3>
    <p><strong>Name:</strong> {{employee.name}}</p>
    <p><strong>Salary:</strong> ${{employee.salary}}</p>
    <p><strong>Age:</strong> {{employee.age}}</p>
    <p><strong>Department:</strong> {{employee.department}}</p>
    <p><strong>Status:</strong> {{#if employee.isActive}}Active{{else}}Inactive{{/if}}</p>
  </div>
{{/if}}

