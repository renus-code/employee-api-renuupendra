<h2>Add New Employee</h2>

<form action="/employees/add" method="POST">
  <label>Name:</label>
  <input type="text" name="name" required minlength="2" maxlength="50">

  <label>Salary:</label>
  <input type="number" name="salary" required min="0" step="0.01">

  <label>Age:</label>
  <input type="number" name="age" min="16" max="80" value="25">

  <label>Department:</label>
  <select name="department">
    <option value="IT" selected>IT</option>
    <option value="HR">HR</option>
    <option value="Sales">Sales</option>
    <option value="Finance">Finance</option>
  </select>

  <label>Status:</label>
  <select name="isActive">
    <option value="true" selected>Active</option>
    <option value="false">Inactive</option>
  </select>

  <button type="submit">Add Employee</button>
</form>

{{#if success}}<p class="msg success">{{success}}</p>{{/if}}
{{#if error}}<p class="msg error">{{error}}</p>{{/if}}

